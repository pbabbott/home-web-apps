{
  "name": "@abbottland/gluetun-sync",
  "version": "0.0.3",
  "private": true,
  "type": "module",
  "scripts": {
    "docker:build": "../../scripts/docker-build.sh apps/ gluetun-sync",
    "docker:push": "../../scripts/docker-push.sh apps/ gluetun-sync",
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev:gluetun": "nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "start": "node -r esbuild-register ./src/index.ts",
    "test": "jest --detectOpenHandles"
  },
  "jest": {
    "preset": "@abbottland/jest-presets/node"
  },
  "dependencies": {
    "@abbottland/logger": "workspace:*",
    "@abbottland/yaml-config": "workspace:*",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cronstrue": "^2.50.0",
    "express": "^4.18.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@abbottland/eslint-config": "workspace:*",
    "@abbottland/jest-presets": "workspace:*",
    "@abbottland/typescript-config": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.1",
    "esbuild-register": "^3.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3"
  }
}
