{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"],
      "dependsOn": ["^build"]
    },
    "test:int": {
      "outputs": ["coverage/**",  "test-results/**"],
      "dependsOn": ["build"]
    },
    "test:unit": {
      "outputs": ["coverage/**",  "test-results/**"],
      "dependsOn": ["build"]
    },
    "docker:build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": []
    },
    "docker:push": {
      "dependsOn": ["^docker:build"],
      "cache": false
    },
    "docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
